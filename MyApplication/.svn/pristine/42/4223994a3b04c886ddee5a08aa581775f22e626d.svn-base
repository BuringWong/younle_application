<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <View
        android:id="@+id/view_line_this_order"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="#dddddd" />

    <TextView
        android:id="@+id/tv_total_money_this_order"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="总金额：0.00"
        android:textColor="#292929"
        android:textSize="19.2sp" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:text="总金额：0.00"
            android:textColor="#292929"
            android:textSize="15sp" />
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/orgin_member_price"
            android:layout_below="@id/tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/orign_price"
                android:textSize="20px"
                android:textColor="#999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原价：￥00.00，会员优惠："/>
            <TextView
                android:id="@+id/member_discount_acc"
                android:textSize="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-￥0"
                android:textColor="#ff5500"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <LinearLayout
            android:id="@+id/ll_discount_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/orgin_member_price"
            android:orientation="vertical">

            <View
                android:id="@+id/view_line_fen_order"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:background="#f1f1f1" />

            <!-- android:visibility="gone" -->
            <RelativeLayout
                android:id="@+id/rl_member_discount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_total_money"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/iv_pic_card_coupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/discount_pic"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_member_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_pic_card_coupons"
                    android:text="会员折扣："
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/member_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_member_discount"
                    android:background="@drawable/discount_info_shape"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="无"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/ll_reduce_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-￥"
                        android:textColor="#FF5500" />

                    <TextView
                        android:id="@+id/tv_reduce_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="#FF5500" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:background="#f1f1f1" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_consume_explain"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_consume_explain"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="该顾客为会员：***，本单记录为会员消费"
                    android:textColor="#999999"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:background="#f1f1f1" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/change_order_money"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_discount_member"
            android:layout_marginTop="10dp"
            android:background="@drawable/add_entity_service_shape"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="改价"
            android:textColor="#46aa6e" />

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/change_order_money"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="应付："
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_discount_total_money"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="￥0.00"
                android:textColor="#ff5500"
                android:textSize="20sp" />
        </LinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:id="@+id/line_de_order_time_num"
        android:layout_below="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="5dp"
        android:background="#f1f1f1" />
    <LinearLayout
        android:id="@+id/ll_order_number"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号："
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_order_no_show_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="46785888"
            android:textSize="14sp"/>
    </LinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76px"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="订单备注"
            android:textSize="25px"
            android:textColor="#999999"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tv_mark_state"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="未填写"
            android:textSize="25px"
            android:drawableRight="@drawable/to_right"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:paddingLeft="30dp"
            android:textColor="#999999"
            android:drawablePadding="5dp"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#f1f1f1"/>
        <TextView
            android:id="@+id/tv_mark_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:layout_marginBottom="24px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="25px"
            android:gravity="center_vertical"
            android:textColor="#222"
            android:lineSpacingMultiplier="1.2"
            android:text="用户自己输入的备注信息"
            />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_below="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f1f1f1" />

    <LinearLayout
        android:id="@+id/ll_order_addtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下单时间："
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_tv_order_time_show_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16-12-23 12:25"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>