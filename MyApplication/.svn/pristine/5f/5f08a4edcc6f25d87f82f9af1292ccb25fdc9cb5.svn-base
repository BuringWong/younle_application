<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:id="@+id/al_bill_detail"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    >
    <include layout="@layout/titlebar_all"
        android:id="@+id/jiazai_title"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/al_bottom"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <View
            android:layout_width="match_parent"
            android:background="#d4d4d4"
            android:layout_height="0.1dp"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_callback"
                android:layout_width="135px"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/btn_print"
                android:layout_marginRight="15px"
                android:background="@drawable/call_back_shape"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/iv_callbacking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/scanner_connecting"/>
                <TextView
                    android:id="@+id/btn_callback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款"
                    android:textColor="#333"
                    android:layout_alignParentBottom="true"
                    android:textSize="15sp"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <Button
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_print"
                android:layout_width="135px"
                android:layout_height="60px"
                android:layout_marginRight="15px"
                android:background="@drawable/print_button_selector"
                android:text="打印凭条"
                android:textColor="#ffffff"
                android:textSize="15sp"/>
            <Button
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_start_send"
                android:layout_width="135px"
                android:layout_height="60px"
                android:layout_marginRight="20px"
                android:background="@drawable/print_button_selector"
                android:text="开始配送"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:visibility="gone"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_see_totalorder"
            android:layout_width="135px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_print"
            android:layout_marginRight="15px"
            android:background="@drawable/call_back_shape"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">
            <TextView
                android:layout_marginLeft="10px"
                android:id="@+id/tv_see_totalorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看总订单"
                android:textColor="#333"
                android:layout_alignParentBottom="true"
                android:textSize="15sp"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_details"
        android:layout_below="@id/jiazai_title"
        android:layout_above="@id/al_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ListView
            android:id="@+id/lv_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null">
        </ListView>
    </com.zhy.autolayout.AutoLinearLayout>
    <include layout="@layout/jiazai_layout"/>
</com.zhy.autolayout.AutoRelativeLayout>

