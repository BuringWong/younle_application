<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="606px"
    android:minWidth="606px"
    android:layout_height="580px"
    android:minHeight="580px">
    <TextView
        android:id="@+id/date_pick_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择开始时间"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36px"
        android:textColor="#333"
        android:textSize="32px"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_tpchoose"
        android:layout_width="match_parent"
        android:layout_height="@dimen/time_picker"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/date_pick_title"
        android:layout_marginTop="20px"
        >
        <DatePicker
            android:id="@+id/dp_time_picker"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Overscan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/time_picker"
            android:calendarViewShown="false"
            android:timePickerMode="spinner"
            ></DatePicker>
        <TimePicker
            android:id="@+id/tp"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Overscan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/time_picker"
            android:layout_toRightOf="@id/dp_time_picker"
            android:layout_alignTop="@id/dp_time_picker"
            android:timePickerMode="spinner"
            ></TimePicker>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_below="@id/ll_tpchoose"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20px"
        android:layout_marginTop="30px">
        <TextView
            android:id="@+id/tv_no"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:textSize="28px"
            android:background="@drawable/native_btn_selector"/>
        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:text="确定"
            android:background="@drawable/positive_btn_selector"
            android:gravity="center"
            android:textSize="28px"
            android:layout_marginLeft="35px"
            />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>