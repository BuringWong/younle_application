<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_gravity="center_horizontal"
    >

    <TextView
        android:id="@+id/tv_notice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择该打印机负责打印的分组"
        android:textColor="#333"
        android:textSize="32px"
        android:layout_below="@id/title_all"
        android:gravity="center"
        android:layout_marginTop="60px"
        />
    <TextView
        android:id="@+id/tv_notice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择后,该打印机的预结单商家联和小程序点单小票的商家联只打印该分组的商品"
        android:textColor="#999"
        android:textSize="18sp"
        android:layout_below="@id/tv_notice1"
        android:gravity="center"
        android:layout_marginTop="30px"
        android:layout_marginLeft="55px"
        android:layout_marginRight="55px"
        />
    <View
        android:id="@+id/line"
        android:layout_below="@id/tv_notice2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/devide_line"
        android:layout_marginTop="60px"
        android:layout_marginLeft="55px"
        android:layout_marginRight="55px"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_above="@id/choose_dic"
        android:layout_below="@id/line"
        android:layout_marginBottom="60px"
        android:divider="@null"
        android:id="@+id/rlv_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55px"
        android:layout_marginRight="55px"
        ></android.support.v7.widget.RecyclerView>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/choose_dic"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingBottom="60px"

        >
        <TextView
            android:id="@+id/tv_no"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:textSize="28px"
            android:background="@drawable/native_btn_selector"/>
        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:text="确定"
            android:background="@drawable/positive_btn_selector"
            android:gravity="center"
            android:textSize="28px"
            android:layout_marginLeft="35px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
