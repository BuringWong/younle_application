<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="78px"
    android:minHeight="78px"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/history_order_selector">
    <TextView
        android:id="@+id/order_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:text="收款时间"
        android:textSize="24px"
        android:textColor="#666"
        />
    <TextView
        android:id="@+id/order_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="订单序号"
        android:textSize="24px"
        android:textColor="#666"
       />

    <TextView
        android:id="@+id/good_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center"
        android:text="商品数量"
        android:textSize="24px"
        android:textColor="#666"
      />
    <TextView
        android:id="@+id/order_way"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="left"
        android:text="渠道工具"
        android:textSize="24px"
        android:textColor="#666"
      />
    <TextView
        android:id="@+id/order_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="备注"
        android:textSize="24px"
        android:textColor="#666"
      />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_payway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wx_icon"/>
        <TextView
            android:layout_marginLeft="15px"
            android:id="@+id/pay_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_toRightOf="@id/iv_payway"
            android:text="收款渠道"
            android:textSize="24px"
            android:textColor="#666"

            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:id="@+id/order_fee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center"
        android:text="金额"
        android:textSize="24px"
        android:textColor="#666"
        />
    <TextView
        android:id="@+id/order_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="right"
        android:text="查看"
        android:textSize="24px"
        android:textColor="#666"
        android:drawableRight="@drawable/to_right"
        android:paddingRight="20dp"
      />
</com.zhy.autolayout.AutoLinearLayout>