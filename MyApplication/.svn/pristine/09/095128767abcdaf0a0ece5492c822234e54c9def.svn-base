<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/scale_left_shape"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/right_title_shape"
        >
        <TextView
            android:id="@+id/tv_right_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="商品列表"
            android:textColor="#666"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_update_goods"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:drawableLeft="@drawable/update_goods"
            android:text="更新商品"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:drawablePadding="5dp"
            android:layout_marginRight="15dp"
            />
        <include layout="@layout/search_layout" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="13dp"
        android:id="@+id/ll_content"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_goods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.1"
            android:visibility="gone"
            >
        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_search_good"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.1"
            android:visibility="gone">
        </android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/tv_nogs"
            android:layout_width="0dp"
            android:layout_weight="6.1"
            android:layout_height="match_parent"
            android:text="暂无商品，请到PC端设置商品"
            android:gravity="center"
            android:textSize="28px"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_good_kinds"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ededed"
            >
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <include layout="@layout/net_error_layout"/>
</LinearLayout>