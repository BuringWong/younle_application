<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:clickable="true"
    android:orientation="horizontal">

    <TextView
        android:layout_marginTop="24px"
        android:id="@+id/tv_waiter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18px"
        android:text="张三"
        android:textColor="#292929"
        android:textSize="15sp"
        />

    <TextView
        android:layout_marginTop="24px"
        android:id="@+id/tv_isusing"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_waiter_name"
        android:background="@drawable/bind_waiter_shape"
        android:layout_marginLeft="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="可选"
        android:gravity="center"
        android:textSize="13sp" />
    <TextView
        android:layout_marginTop="20px"
        android:id="@+id/tv_live_item"
        android:layout_below="@id/tv_waiter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:text="项目：泰式按摩服务一小时 x2"
        android:textColor="#999999"
        android:textSize="13sp" />
    <TextView
        android:layout_marginTop="14px"
        android:id="@+id/tv_live_order_time"
        android:layout_below="@id/tv_live_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:text="下单时间：2016-2-2 12:20:32"
        android:textColor="#999999"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18px"
        android:layout_below="@id/tv_live_order_time"
        android:layout_marginTop="20px"
        >
        <Button
            android:id="@+id/btn_minus"
            android:layout_height="36px"
            android:layout_width="36px"
            android:layout_centerVertical="true"
            android:background="@drawable/minus_little"
            android:gravity="center"
            android:layout_marginBottom="12px"
            android:textColor="#fff" />
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="36px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="0"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:textColor="#000"
            android:textSize="15sp" />
        <Button
            android:id="@+id/btn_add"
            android:layout_height="36px"
            android:layout_width="36px"
            android:layout_centerVertical="true"
            android:background="@drawable/add_little"
            android:layout_marginBottom="12px"
            android:gravity="center"
            android:textColor="#fff" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="18px"
        android:background="#d8d8d8" />
</com.zhy.autolayout.AutoRelativeLayout>