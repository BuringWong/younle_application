<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ll_unknown_pay_result">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="@drawable/ll_shape_timmer_cut">

        <TextView
            android:id="@+id/tv_title_pay_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="尚未收到收款结果"
            android:textColor="#000"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="请您至“管理-订单管理-收银机订单统计”中查询收款结果"
            android:textColor="#000"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="收钱结果以订单统计中数据为准！如果订单统计中没有收款记录则未收款成功，顾客端也没有扣款。"
            android:textColor="#999999"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:background="#999"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_return"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="返回"
                android:textSize="16sp"
                android:textColor="#000"
                android:background="@drawable/return_noresult_selector"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#999"/>

            <TextView
                android:id="@+id/tv_see_orders"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="查看订单统计"
                android:textSize="16sp"
                android:textColor="#000"
                android:background="@drawable/see_orders_noresult_selector"/>
        </LinearLayout>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#999"/>-->

    </LinearLayout>

</RelativeLayout>