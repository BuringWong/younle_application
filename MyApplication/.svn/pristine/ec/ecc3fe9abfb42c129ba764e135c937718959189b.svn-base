<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <include layout="@layout/titlebar_upgrade"
        android:id="@+id/lay_title_bar"/>

    <ImageView
        android:id="@+id/iv_fail"
        android:layout_below="@+id/lay_title_bar"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/verification_failed"/>

    <TextView
        android:id="@+id/tv_error_msg"
        android:layout_below="@+id/iv_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:text="核销失败"/>

    <Button
        android:id="@+id/bt_cancel_again"
        android:layout_below="@+id/tv_error_msg"
        android:layout_marginTop="30dp"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button_selector"
        android:text="返回重试"
        android:textColor="#ffffff"
        android:textSize="18sp"/>
</RelativeLayout>