<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_all"
    android:layout_width="match_parent"
    android:layout_height="58px"
    android:layout_alignParentTop="true"
    android:background="#000">

    <TextView
        android:id="@+id/left_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10px"
        android:gravity="center"
        android:paddingLeft="22px"
        android:text="门店派智能收银系统"
        android:drawableLeft="@drawable/title_little_logo"
        android:drawablePadding="10dp"
        android:textColor="#fff"
        android:textSize="20px"
         />
    <TextView
        android:id="@+id/service_hone"
        android:layout_toRightOf="@id/left_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10px"
        android:gravity="center"
        android:paddingLeft="50px"
        android:paddingRight="20px"
        android:text="4009-600-567"
        android:drawableLeft="@drawable/phone_icon"
        android:drawablePadding="10dp"
        android:textColor="#666"
        android:textSize="20px"
         />
    <TextView
        android:id="@+id/exit_account"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingRight="40px"
        android:paddingLeft="30px"
        android:textSize="20px"
        android:textColor="#999"
        android:text="退出账号"
        android:gravity="center_vertical"/>
    <View
        android:id="@+id/title_devide_line"
        android:layout_toLeftOf="@id/exit_account"
        android:layout_width="1px"
        android:layout_centerVertical="true"
        android:layout_height="30px"
        android:background="#555"/>
    <TextView
        android:layout_toLeftOf="@id/title_devide_line"
        android:id="@+id/tv_current_acc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="30px"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:text="王小明"
        android:drawableLeft="@drawable/current_account"
        android:drawablePadding="5dp"
        android:textColor="#fff"
        android:textSize="20px"
         />

</com.zhy.autolayout.AutoRelativeLayout>