<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#f1f1f1">

    <include layout="@layout/titlebar_upgrade"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择设备类型："
        android:padding="10dp" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_choose_bt_printer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_print_local"
            android:paddingLeft="36px"
            android:paddingRight="18px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:text="蓝牙打印机" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:text="立即连接"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/to_right"
            android:drawablePadding="10px"
            android:textColor="#999"
            android:paddingRight="18px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:id="@+id/device_line"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f2f2f2" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/arl_choose_yun_printer"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_print_bluetooth"
            android:paddingLeft="36px"
            android:paddingRight="18px"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/to_right"
            android:layout_height="80px"
            android:text="云打印机"
            android:background="@drawable/store_chose_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:text="立即连接"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/to_right"
            android:drawablePadding="10px"
            android:textColor="#999"
            android:paddingRight="18px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_marginLeft="36px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f2f2f2" />
</com.zhy.autolayout.AutoLinearLayout>
