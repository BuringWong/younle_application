<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/scanner_base">

    <include
        android:id="@+id/title"
        layout="@layout/right_title_layout"
         />
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_howto_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="86px"
        android:orientation="vertical"
        android:layout_below="@id/title">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="86px"
            android:textSize="36px"
            android:textColor="#333"
            android:text="如何添加扫码设备（扫码枪/扫码盒）？"/>
        <TextView
            android:id="@+id/step_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="66px"
            android:textSize="24px"
            android:textColor="#666"
            android:text="第一步：启动扫码设备，进入配对模式（请参照扫码枪或扫码盒的说明书）"/>
        <TextView
            android:id="@+id/step_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:textSize="24px"
            android:textColor="#666"
            android:text="第二步：点击下方“添加扫码设备”，等待连接成功。"/>
        <TextView
            android:id="@+id/add_device"
            android:layout_width="258px"
            android:layout_height="76px"
            android:textSize="28px"
            android:layout_marginTop="40px"
            android:textColor="#fff"
            android:text="+添加扫码设备"
            android:gravity="center"
            android:background="@drawable/positive_btn_selector"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_added_devices"
        android:background="#fff"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/manager_connect_success"
        android:text="已绑定设备"
        android:drawablePadding="15px"
        android:textSize="36px"
        android:textColor="#333"
        android:gravity="center"/>
</com.zhy.autolayout.AutoRelativeLayout>