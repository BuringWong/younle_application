<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:id="@+id/ll_main"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    >
    <include layout="@layout/titlebar_all"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_good_name"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bind_waiter_shape"
                android:hint="商品名称"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/et_good_price"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bind_waiter_shape"
                android:hint="价格"
                android:textSize="15sp"
                />
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/et_good_kind"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bind_waiter_shape"
                android:drawableRight="@drawable/to_right"
                android:hint="类别"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/et_dixiao"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bind_waiter_shape"
                android:hint="最低消费"
                android:visibility="gone"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/et_yajin"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bind_waiter_shape"
                android:hint="押金"
                android:visibility="gone"
                android:textSize="15sp"
                />

            <include layout="@layout/whether_bind_waiter"/>
            <TextView
                android:id="@+id/bind_desc"
                android:paddingTop="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/notify_left"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品需要销售员推销，并根据销售数量核算业绩"
                android:textSize="15sp"
                android:ems="5"/>
            <include
                android:id="@+id/ll_charging_rule"
                layout="@layout/charging_layout"/>
            <Button
                android:id="@+id/btn_add"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/login_button_selector"
                android:text="+ 添加计费规则"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:visibility="gone"/>
            <Button
                android:layout_marginBottom="20dp"
                android:id="@+id/btn_save"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/login_button_selector"
                android:text="保存"
                android:textColor="#ffffff"
                android:textSize="15sp"/>
        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>



</com.zhy.autolayout.AutoLinearLayout>
