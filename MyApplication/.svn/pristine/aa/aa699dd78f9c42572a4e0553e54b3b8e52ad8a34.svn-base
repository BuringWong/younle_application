<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:background="@drawable/right_bottom_shape"
    android:id="@+id/net_error"
    android:visibility="gone"
    >
    <ImageView
        android:id="@+id/iv_jiazai_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/couldnot_get_data"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/neterror_notice"
        android:layout_width="240px"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/iv_jiazai_fail"
        android:text="请检查网络后重试"
        android:textSize="28px"
        android:layout_marginTop="50px"/>
    <TextView
        android:id="@+id/net_error_refresh"
        android:layout_width="240px"
        android:layout_height="60px"
        android:layout_centerInParent="true"
        android:layout_below="@id/neterror_notice"
        android:text="刷新"
        android:textSize="28px"
        android:layout_marginTop="25px"
        android:gravity="center"
        android:background="@drawable/native_btn_selector"/>
</com.zhy.autolayout.AutoRelativeLayout>