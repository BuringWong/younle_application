<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/ll_button_select"
    android:layout_height="wrap_content"
    android:padding="0.1dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/bind_waiter_shape"
    >
    <RadioGroup
        android:id="@+id/rg_whether_bind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/voucher_rg_background"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <RadioButton
            android:gravity="center"
            android:button="@android:color/transparent"
            android:background="@drawable/voucher_rb_selector"
            android:id="@+id/need_bind"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="商品需要绑定销售员"
            android:textColor="@drawable/rb_textcolor_selecor"
            android:textSize="15sp" />
        <RadioButton
            android:gravity="center"
            android:button="@android:color/transparent"
            android:background="@drawable/voucher_rb_selector"
            android:id="@+id/unneed_bind"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="商品无需绑定销售员"
            android:textColor="@drawable/rb_textcolor_selecor"
            android:textSize="15sp" />
    </RadioGroup>
</LinearLayout>