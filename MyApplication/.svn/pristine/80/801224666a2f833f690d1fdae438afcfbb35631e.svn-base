<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:id="@+id/bind_wm"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">

        <include layout="@layout/titlebar_upgrade"
            android:id="@+id/title"/>

        <TextView
            android:id="@+id/tv_notices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:background="#FFF7F5"
            android:paddingBottom="10dp"
            android:gravity="center_horizontal"
            android:text="你需要开通“外卖多平台接单”功能才能使用！"
            android:textSize="15sp"
            android:textColor="#f76a24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="欢迎使用门店派外卖多平台接单"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="绑定您的外卖平台账号，可实现同时自动接单打印"
            android:textSize="13sp"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/tv_band_mt_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/meituan_icon_white"
            android:drawableRight="@drawable/to_right_white"
            android:padding="16dp"
            android:background="@drawable/take_out_food_mt_background"
            android:text="绑定美团外卖商家账号"
            android:textColor="#ffffff"
            />
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/change_mt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/take_out_food_mt_background"
            >
            <ImageView
                android:id="@+id/iv_mt_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/meituan_icon_white"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_mt_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已绑定"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/mt_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="呷哺呷哺华普超市店"
                    android:textColor="#99ffffff"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_band_mt_account_gray"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:drawableLeft="@drawable/meituan_icon_gray"
            android:drawableRight="@drawable/to_right"
            android:padding="16dp"
            android:background="@drawable/take_out_food_mt_background_gray"
            android:text="绑定美团外卖商家账号"
            android:textColor="#e1e1e1"/>

        <TextView
            android:id="@+id/tv_band_eleme_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/eleme_icon_white"
            android:drawableRight="@drawable/to_right_white"
            android:padding="16dp"
            android:background="@drawable/take_out_food_eleme_background"
            android:text="绑定饿了么商家账号"
            android:textColor="#ffffff"/>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/change_elm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/take_out_food_eleme_background"
            >
            <ImageView
                android:id="@+id/iv_elm_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/eleme_icon_white"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_elm_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已绑定"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/elm_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="呷哺呷哺华普超市店"
                    android:textColor="#99ffffff"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_band_eleme_account_gray"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:drawableLeft="@drawable/eleme_icon_gray"
            android:drawableRight="@drawable/to_right"
            android:padding="16dp"
            android:background="@drawable/take_out_food_mt_background_gray"
            android:text="绑定饿了么商家账号"
            android:textColor="#e1e1e1"/>

        <TextView
            android:id="@+id/tv_band_baidu_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/baidu_icon_white"
            android:drawableRight="@drawable/to_right_white"
            android:padding="16dp"
            android:background="@drawable/take_out_food_baidu_background"
            android:text="绑定百度外卖商家账号"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/tv_band_baidu_account_gray"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:drawableLeft="@drawable/baidu_icon_gray"
            android:drawableRight="@drawable/to_right"
            android:padding="16dp"
            android:background="@drawable/take_out_food_mt_background_gray"
            android:text="绑定百度外卖商家账号"
            android:textColor="#e1e1e1"/>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/change_bd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/take_out_food_baidu_background"
            >
            <ImageView
                android:id="@+id/iv_bd_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baidu_icon_white"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_bd_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已绑定"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/bd_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="呷哺呷哺华普超市店"
                    android:textColor="#99ffffff"/>
            </LinearLayout>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_start_to_use"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/take_out_food_confirm_button"
            android:text="开始使用"
            android:textSize="18sp"
            android:textColor="#3f88ce"/>
    </LinearLayout>
</RelativeLayout>
