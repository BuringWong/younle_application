<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/filter_layout"
    android:background="#fff">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:id="@+id/rl_select_left"
        android:layout_marginLeft="5dp">

        <!-- 全部服务电商订单 -->
        <TextView
            android:singleLine="true"
            android:maxLength="7"
            android:id="@+id/tv_select_left"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部订单"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/iv_left_icon"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/to_down"
            android:layout_toRightOf="@id/tv_select_left"
            android:layout_marginLeft="5dp"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:id="@+id/payway_center_line"
        android:layout_width="1px"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginBottom="12.5dp"
        android:layout_marginRight="5dp"
        android:background="#f2f2f2"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="#fff"
        android:layout_weight="1"
        android:id="@+id/rl_select_right"
        >
        <!-- 全部收款方式 -->
        <TextView
            android:singleLine="true"
            android:maxLength="7"
            android:id="@+id/tv_select_right"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部收银通道"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/iv_right_icon"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/to_down"
            android:layout_toRightOf="@id/tv_select_right"
            android:layout_marginLeft="5dp"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="1px"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginBottom="12.5dp"
        android:layout_marginRight="5dp"
        android:background="#f2f2f2"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="#fff"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        android:id="@+id/rl_select_all_tools">
        <!-- 全部收款工具 -->
        <TextView
            android:id="@+id/tv_all_tools"
            android:singleLine="true"
            android:maxLength="7"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部收银方式"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/iv_tools_icon"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/to_down"
            android:layout_toRightOf="@id/tv_all_tools"
            android:layout_marginLeft="5dp"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>