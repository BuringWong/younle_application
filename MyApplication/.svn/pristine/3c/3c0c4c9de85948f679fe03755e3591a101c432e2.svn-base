<?xml version="1.0" encoding="utf-8"?>
<com.yongle.letuiweipad.view.ScanRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center"
    android:id="@+id/scan_rl_layot"
    >
     <com.zhy.autolayout.AutoRelativeLayout
         android:layout_width="708px"
         android:layout_height="550px"
         >
         <View
             android:id="@+id/center_line"
             android:layout_width="match_parent"
             android:layout_height="1px"
             android:layout_marginLeft="50px"
             android:layout_marginRight="50px"
             android:layout_centerInParent="true"
             android:background="#dbdbdb"/>
         <com.zhy.autolayout.AutoRelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:gravity="center"
             android:id="@+id/al_notice"
             android:layout_above="@id/center_line"
             android:layout_marginBottom="40px">
             <pl.droidsonroids.gif.GifImageView
                 android:layout_marginTop="70px"
                 android:id="@+id/gif_scan"
                 android:layout_width="100px"
                 android:layout_height="100px"
                 android:background="@drawable/scan"
                 android:layout_alignLeft="@+id/center_line"
                 android:layout_alignStart="@+id/center_line"
                 android:layout_marginLeft="20px"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="28px"
                 android:paddingBottom="10px"
                 android:gravity="top"
                 android:textColor="#666"
                 android:layout_alignTop="@id/gif_scan"
                 android:layout_toRightOf="@id/gif_scan"
                 android:text="已连接扫码设备"
                 android:layout_marginLeft="25px"/>
             <TextView
                 android:paddingTop="10px"
                 android:gravity="bottom"
                 android:id="@+id/tv_payscan_notice"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignBottom="@id/gif_scan"
                 android:layout_toRightOf="@id/gif_scan"
                 android:layout_marginLeft="25px"
                 android:textSize="36px"
                 android:textColor="#333"
                 android:text="请扫描顾客的会员卡二维码"/>
             <com.zhy.autolayout.AutoLinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_below="@id/tv_payscan_notice"
                 android:layout_marginTop="20px"
                 android:layout_alignLeft="@id/tv_payscan_notice"
                 android:gravity="center"
                 android:id="@+id/ll_fp_notice">
                 <TextView
                     android:id="@+id/find_card"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="顾客怎样找到会员卡"
                     android:textSize="24px"
                     android:textColor="#569e09"
                     />
                 <TextView
                     android:id="@+id/find_voucher"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="/券的二维码？"
                     android:textSize="24px"
                     android:textColor="#569e09"
                     />
             </com.zhy.autolayout.AutoLinearLayout>

             <com.zhy.autolayout.AutoRelativeLayout
                 android:id="@+id/scanner_error"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:gravity="bottom|center_horizontal"
                 android:background="#fff"
                 android:visibility="gone">
                 <TextView
                     android:id="@+id/scanner_error_msg"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="请启动扫码设备"
                     android:textSize="32px"
                     android:drawableLeft="@drawable/pay_scanneroff_notice"
                     android:gravity="center"
                     android:drawablePadding="20px"
                     android:layout_marginBottom="42px"
                     android:textColor="#333"
                     />
             </com.zhy.autolayout.AutoRelativeLayout>

         </com.zhy.autolayout.AutoRelativeLayout>


         <TextView
             android:id="@+id/input_notice"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" 
             android:layout_centerHorizontal="true"
             android:text="也可手动输入识别"
             android:textSize="28px"
             android:textColor="#333"
             android:layout_below="@id/center_line"
             android:layout_marginTop="60px"
             />
         <com.zhy.autolayout.AutoLinearLayout
             android:id="@+id/input_layout"
             android:layout_marginTop="50px"
             android:layout_below="@id/input_notice"
             android:layout_width="match_parent"
             android:layout_height="76px"
             android:layout_marginLeft="50px"
             android:layout_marginRight="50px"
             android:focusable="true"
             android:focusableInTouchMode="true"
             >
             <EditText
                 android:id="@+id/et_enter_num"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="2.7"
                 android:background="@drawable/input_shape"
                 android:hint="手动输入手机号或会员卡号"
                 android:paddingLeft="20px"
                 android:textSize="24px"
                 android:textColor="#333"
                 android:textColorHint="#999"/>
             <TextView
                 android:id="@+id/tv_request_memberinfo"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:textColor="#fff"
                 android:text="确定"
                 android:background="@drawable/positive_btn_selector"
                 android:gravity="center"
                 android:textSize="28px"
                 android:layout_marginLeft="15px"
                 />
         </com.zhy.autolayout.AutoLinearLayout>
         <ImageView
             android:id="@+id/close"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/close_icon"
             android:padding="15px"
             android:layout_alignParentRight="true"/>
     </com.zhy.autolayout.AutoRelativeLayout>
</com.yongle.letuiweipad.view.ScanRelativeLayout>
