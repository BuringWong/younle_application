<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="360px"
    android:minWidth="360px"
    android:layout_height="wrap_content"
    android:minHeight="182px"
    android:gravity="center"
    android:background="@drawable/pup_shape">
    <TextView
        android:id="@+id/title"
        android:layout_marginTop="40px"
        android:layout_width="360px"
        android:layout_height="0px"
        android:layout_weight="1"
        android:text="暂不能使用退款功能!"
        android:textSize="24px"
        android:textColor="#333"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_notice_msg"
        android:layout_width="360px"
        android:layout_height="0px"
        android:layout_weight="2.5"
        android:text="请管理员到乐推微平台设置退款密码，才能进行退款操作。"
        android:maxEms="13"
        android:lineSpacingMultiplier="1.2"
        android:singleLine="false"
        android:textSize="22px"
        android:textColor="#666"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_marginTop="30px"
        android:gravity="center_vertical"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="40px"
        android:background="#f2f2f2"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="360px"
        android:layout_height="60px"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:text="确定"
            android:background="@drawable/positive_btn_selector"
            android:gravity="center"
            android:textSize="28px"
            />
        <!--<TextView
            android:id="@+id/tv_yes"
            android:textColor="#3F88CD"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="24px"
            android:text="确定"/>-->
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>