<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <size android:width="180px" android:height="60px"/>
            <corners android:radius="5px"/>
            <gradient android:startColor="#FA8400"
                android:endColor="#fa8400"
                android:angle="90"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <size android:width="180px" android:height="60px"/>
            <corners android:radius="5px"/>
            <gradient android:startColor="#da6200"
                android:endColor="#da6200"
                android:angle="90"/>
        </shape>
    </item>
</selector>