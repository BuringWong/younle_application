<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ll_unknown_pay_result">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="556px"
        android:layout_height="wrap_content"
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:orientation="vertical"
        android:background="@drawable/ll_shape_timmer_cut">

        <TextView
            android:id="@+id/tv_title_pay_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="尚未收到收款结果"
            android:textColor="#000"
            android:textSize="30px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="请您至“管理-订单管理-收银机订单统计”中查询收款结果"
            android:textColor="#000"
            android:textSize="28px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="收钱结果以订单统计中数据为准！如果订单统计中没有收款记录则未收款成功，顾客端也没有扣款。"
            android:textColor="#999999"
            android:textSize="28px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginBottom="40px"
            android:layout_marginTop="70px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_return"
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:background="@drawable/native_btn_selector"
                android:gravity="center"
                android:text="返回"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_see_orders"
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:background="@drawable/positive_btn_selector"
                android:gravity="center"
                android:text="查看订单统计"
                android:textColor="#fff"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>
