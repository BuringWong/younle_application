<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="385px"
    android:minWidth="360px"
    android:layout_height="wrap_content"
    android:minHeight="285px"
    android:gravity="center"
    android:background="@drawable/pup_shape">
    <TextView
        android:layout_marginTop="40px"
        android:layout_width="385px"
        android:layout_height="0px"
        android:layout_weight="1"
        android:text="请填写备注"
        android:textSize="28px"
        android:textColor="#333"
        android:gravity="center"/>
    <EditText
        android:id="@+id/et_notice_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120px"
        android:maxEms="13"
        android:lineSpacingMultiplier="1.2"
        android:singleLine="false"
        android:textSize="24px"
        android:textColor="#999"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:padding="10px"
        android:layout_marginTop="30px"
        android:hint="在此填写备注内容"
        android:gravity="top"
        android:background="@drawable/remarkes_background_shape"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="40px"
        android:background="#aaa"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="385px"
        android:layout_height="70px"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_no"
            android:textColor="#333"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="24px"
            android:text="取消"/>
        <View
            android:layout_width="1px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_height="48px"
            android:background="#aaa"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_yes"
            android:textColor="#3F88CD"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="24px"
            android:text="提交"/>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>