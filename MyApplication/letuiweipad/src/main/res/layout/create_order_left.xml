<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="670px"
    android:layout_height="match_parent"
    android:background="@drawable/right_bottom_shape"
    android:minWidth="670px">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/al_bottom"
        android:layout_width="670px"
        android:layout_height="106px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/left_bottom_shape">
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/uncommit_footer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            >
            <Button
                android:visibility="gone"
                android:id="@+id/btn_uncommit_cancel"
                android:layout_width="180px"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_marginRight="20px"
                android:background="@drawable/cancel_order_shape"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="#B0F7CD"
                android:textSize="28px" />
            <Button
                android:id="@+id/commit_order"
                android:layout_width="180px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28px"
                android:background="@drawable/commit_order_button_selector"
                android:text="提交订单"
                android:textColor="#ffffff"
                android:textSize="28px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/comitted_footer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:visibility="gone"
            >
            <Button
                android:id="@+id/commited_order_cancel"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/commit_order"
                android:background="@drawable/cancel_order_shape"
                android:gravity="center"
                android:text="取消"
                android:textColor="#B0F7CD"
                android:textSize="28px"
                android:layout_marginRight="15px"/>
            <Button
                android:id="@+id/commited_order_add"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/commit_order"
                android:background="@drawable/cancel_order_shape"
                android:gravity="center"
                android:text="加商品"
                android:textColor="#B0F7CD"
                android:textSize="28px"
                android:layout_marginRight="15px"/>
            <Button
                android:id="@+id/commited_order_print"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/commit_order"
                android:background="@drawable/cancel_order_shape"
                android:gravity="center"
                android:text="打印"
                android:textColor="#B0F7CD"
                android:textSize="28px"
                android:layout_marginRight="15px"/>
            <Button
                android:id="@+id/commited_order_up"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/commit_order_button_selector"
                android:text="挂单"
                android:textColor="#ffffff"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_pager_left"
        android:layout_width="670px"
        android:layout_height="match_parent"
        android:background="@drawable/right_bottom_shape"
        android:orientation="vertical"
        android:layout_above="@id/al_bottom"
       >
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_nomember_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/self85"
            android:gravity="center_vertical"
            android:background="@drawable/member_header_shape"
            android:paddingLeft="@dimen/member_margin"
            android:paddingRight="@dimen/self10"
            >

            <TextView
                android:id="@+id/no_member_notice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="暂无会员信息"
                android:layout_centerVertical="true"
                android:textColor="#7c4c21"
                android:textSize="24px"/>

            <TextView
                android:id="@+id/tv_inditify_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/left_title_inditfy_member_shape"
                android:drawableLeft="@drawable/inditify_icon"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:text="识别会员"
                android:textColor="#fff"
                android:textSize="24px" />

        </com.zhy.autolayout.AutoRelativeLayout>
        <!--会员相关信息-->
        <include layout="@layout/member_layout_new" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_order_remark"
            android:layout_width="635px"
            android:layout_height="52px"
            android:layout_marginLeft="18px"
            android:layout_marginTop="15px"
            android:background="@drawable/left_remark_shape"
            android:visibility="gone">

            <TextView
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:drawablePadding="20px"
                android:drawableRight="@drawable/to_right"
                android:gravity="center_vertical"
                android:text="修改"
                android:textColor="#7c4c21"
                android:textSize="24px" />
            <TextView
                android:id="@+id/tv_order_remark_title"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"

                android:text="备注:"
                android:textColor="#333"
                android:textSize="24px" />
            <TextView
                android:id="@+id/tv_order_remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_order_remark_title"
                android:layout_toLeftOf="@id/right"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#333"
                android:textSize="24px"
                android:gravity="center_vertical"
                android:layout_marginRight="10px"
                />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="635px"
            android:layout_height="match_parent"
            android:layout_above="@id/al_bottom"
            android:layout_below="@id/rl_order_remark"
            android:layout_marginLeft="18px"
            android:layout_marginTop="15px"
            android:layout_marginBottom="15px"
            android:background="@drawable/left_remark_shape">
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/order_content_title"
                android:layout_width="match_parent"
                android:layout_height="55px"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:paddingRight="20px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="名称"
                    android:textColor="#666"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="数量"
                    android:gravity="right"
                    android:textColor="#666"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    android:text="金额"
                    android:textColor="#666"
                    android:textSize="24px"
                    />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    android:text="会员价"
                    android:textColor="#666"
                    android:textSize="24px"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="删除"
                    android:textColor="#666"
                    android:textSize="24px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:id="@+id/title_content_devide_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/order_content_title"
                android:background="#dbdbdb" />
            <TextView
                android:id="@+id/tv_selected_nogs"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40px"
                android:drawableTop="@drawable/empty_order_icon"
                android:drawablePadding="40px"
                android:text="请添加商品"
                android:textColor="#333"
                android:textSize="24px" />
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/total_num_acc"
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_alignParentBottom="true"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:layout_marginBottom="10px"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#dbdbdb" />
                <TextView
                    android:id="@+id/num_name"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品数量："
                    android:textSize="25px"
                    android:textColor="#333"/>
                <TextView
                    android:id="@+id/order_gs_num"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/num_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="25px"
                    android:textStyle="bold"
                    android:textColor="#333"/>
                <TextView
                    android:id="@+id/order_gs_acc"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25px"
                    android:textColor="#e54c00"
                    android:textStyle="bold"
                    android:text="86"/>
                <TextView
                    android:id="@+id/totalfee_name"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/order_gs_acc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25px"
                    android:textColor="#333"
                    android:text="合计："/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_memmber_reduce"
                    android:layout_below="@id/order_gs_acc"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20px"
                    android:textColor="#f65d11"
                    android:layout_marginTop="10px"
                    android:text="-14.00"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_reducefee_name"
                    android:layout_centerVertical="true"
                    android:layout_below="@id/order_gs_acc"
                    android:layout_toLeftOf="@id/tv_memmber_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20px"
                    android:textColor="#666"
                    android:layout_marginTop="10px"
                    android:text="会员优惠："/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <ListView
                android:id="@+id/lv_selected_gs"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_marginLeft="1px"
                android:layout_marginRight="1px"
                android:layout_height="match_parent"
                android:layout_above="@id/total_num_acc"
                android:layout_below="@id/title_content_devide_line">
            </ListView>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>