<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:id="@+id/al_bill_detail"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    >
    <include layout="@layout/right_title_layout"
        android:id="@+id/jiazai_title"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/al_bottom"
        android:layout_width="match_parent"
        android:layout_height="106px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#3d3d40">
        <View
            android:layout_width="match_parent"
            android:background="#d4d4d4"
            android:layout_height="0.1dp"/>
        <Button
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_print"
            android:layout_width="180px"
            android:layout_height="60px"
            android:layout_marginRight="28px"
            android:background="@drawable/print_button_selector"
            android:text="打印凭条"
            android:textColor="#ffffff"
            android:textSize="15sp"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_callback"
            android:layout_width="180px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_print"
            android:layout_marginRight="15px"
            android:background="@drawable/cancel_order_shape"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/iv_callbacking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/scanner_connecting"/>
            <TextView
                android:layout_marginLeft="10px"
                android:id="@+id/btn_callback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款"
                android:textColor="#B0F7CD"
                android:layout_alignParentBottom="true"
                android:textSize="15sp"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_details"
        android:layout_below="@id/jiazai_title"
        android:layout_above="@id/al_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ListView
            android:id="@+id/lv_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null">
        </ListView>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
