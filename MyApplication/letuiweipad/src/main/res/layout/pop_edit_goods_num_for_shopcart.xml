<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600px"
    android:minWidth="600px"
    android:layout_height="480px"
    android:minHeight="480px"
    android:id="@+id/ll_pop_edit_goods_num">

    <!-- mulity_back_shadow  ll_shape_timmer_cut_shop_cart-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/mulity_back_shadow">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="vertical"
            android:background="@drawable/ll_shape_timmer_cut_shop_cart">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:text="请填写数量"
                android:textColor="#000"
                android:textSize="28px"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/add_raduce_goods"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_minus"
                    android:clickable="true"
                    android:layout_width="52px"
                    android:layout_height="50px"
                    android:background="@drawable/minus"/>

                <EditText
                    android:id="@+id/et_goods_num"
                    android:layout_width="80dp"
                    android:layout_height="50px"
                    android:gravity="center"
                    android:background="@null"
                    android:maxLength="5"
                    android:inputType="numberDecimal"
                    android:text=""/>

                <ImageView
                    android:id="@+id/btn_add"
                    android:clickable="true"
                    android:layout_width="52px"
                    android:layout_height="50px"
                    android:background="@drawable/add"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="30dp"
                android:background="#999"/>-->

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="75px"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_return"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="取消"
                    android:textSize="28px"
                    android:textColor="#000"
                    android:background="@drawable/return_noresult_selector_for_shop_cart"/>

                <!--<View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#999"/>-->

                <TextView
                    android:id="@+id/tv_determine"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-1px"
                    android:gravity="center"
                    android:text="确定"
                    android:textSize="28px"
                    android:textColor="#3f88ce"
                    android:background="@drawable/see_orders_noresult_selector_for_shop_cart"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>