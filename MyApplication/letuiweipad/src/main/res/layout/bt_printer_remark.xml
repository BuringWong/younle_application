<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="606px"
    android:minWidth="606px"
    android:layout_height="390px"
    android:minHeight="390px"
    android:gravity="center"
    android:background="@drawable/pup_shape">
    <TextView
        android:id="@+id/tv_notice_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:text="确定要删除该设备吗？"
        android:maxEms="13"
        android:lineSpacingMultiplier="1.2"
        android:singleLine="false"
        android:textSize="32px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:textColor="#333"
        android:gravity="center"/>
    <EditText
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/printers_shape"
        android:maxLength="9"
        android:paddingLeft="5dp"
        android:textColorHint="#999999"
        android:textSize="28px"
        android:layout_marginTop="55px"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="55px"
        android:layout_marginTop="65px">
        <TextView
            android:id="@+id/tv_no"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:textSize="28px"
            android:background="@drawable/native_btn_selector"/>
        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:text="确定"
            android:background="@drawable/positive_btn_selector"
            android:gravity="center"
            android:textSize="28px"
            android:layout_marginLeft="35px"
            />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>