<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="708px"
    android:layout_height="550px">
    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_icon"
        android:padding="15px"
        android:layout_alignParentRight="true"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="154px"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:id="@+id/input"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="实收"
                android:textColor="#333"
                android:textSize="26px" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="0px"
                android:layout_weight="3"
                android:layout_height="66px"
                android:layout_marginLeft="15px"
                android:layout_toRightOf="@id/tv_total_msg"
                android:background="@drawable/input_shape"
                android:paddingLeft="10px"
                android:paddingRight="10px">
                <EditText
                    android:id="@+id/tv_cashpay_shishou"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="00.00"
                    android:textColor="#333"
                    android:textSize="36px"
                    android:textStyle="bold"
                    android:background="@null"
                    android:inputType="number"/>

            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_acc"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_total_msg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="找零"
                android:textColor="#333"
                android:textSize="26px"
                />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="66px"
                android:layout_marginLeft="15px"
                android:layout_toRightOf="@id/tv_total_msg"
                android:paddingLeft="10px"
                android:paddingRight="10px">
                <TextView
                    android:id="@+id/tv_cashpay_return"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="00.00"
                    android:textColor="#333"
                    android:textSize="36px"
                    android:textStyle="bold"/>

            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:id="@+id/tv_yes"
        android:layout_width="200px"
        android:layout_height="80px"
        android:textColor="#fff"
        android:text="确认收款"
        android:background="@drawable/positive_btn_selector"
        android:gravity="center"
        android:textSize="28px"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/input"
        android:layout_marginTop="100px"
        />
 </com.zhy.autolayout.AutoRelativeLayout>
