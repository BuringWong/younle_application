<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/right_title_layout"
         />
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/no_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/title"
        android:layout_marginLeft="86px"
        android:layout_marginTop="86px"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您还未设置广告图片"
            android:textSize="36px"
            android:textColor="#333"/>
        <TextView
            android:id="@+id/tv_nosetting_notice"
            android:layout_marginTop="66px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_fp_tp"/>
        <TextView
            android:layout_centerInParent="true"
            android:gravity="center"
            android:id="@+id/reget"
            android:layout_width="250px"
            android:layout_height="70px"
            android:layout_marginTop="58px"
            android:textSize="28px"
            android:textColor="#333"
            android:background="@drawable/native_btn_selector"
            tools:text="再次刷新" />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_refresh_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:visibility="gone">
       <TextView
           android:layout_above="@id/button"
           android:layout_centerInParent="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="@string/refresh_fuping"
           android:drawableLeft="@drawable/manager_connect_success"
           android:drawablePadding="30px"
           android:textSize="18sp"/>
   </com.zhy.autolayout.AutoLinearLayout>
    <RelativeLayout
        android:id="@+id/rl_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/right_bottom_shape"
        >

        <TextView
            android:id="@+id/tv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="正在更新,请稍等"
            android:textSize="36px"
            android:textColor="#333"/>
        <ImageView
            android:id="@+id/iv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fp_readpic_loading"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/tv_loading"
            android:layout_marginRight="30px"/>
    </RelativeLayout>
    <include layout="@layout/net_error_layout"/>
</com.zhy.autolayout.AutoRelativeLayout>