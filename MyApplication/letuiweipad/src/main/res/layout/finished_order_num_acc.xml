<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/total_num_acc"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.3"
    android:layout_below="@id/condition"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="#efefef"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_total_num"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="120px"
        android:orientation="horizontal"
        android:background="@drawable/finished_order_num_shape"
        android:layout_marginLeft="24px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="订单笔数"
            android:textColor="#fff"
            android:textSize="26px"
            android:gravity="center"
            android:layout_marginLeft="170px"
            android:drawableLeft="@drawable/finished_order_num"
            android:drawablePadding="28px"
            />
        <View
            android:layout_width="1px"
            android:layout_height="66px"
            android:background="#FFCE79"
            android:layout_marginLeft="86px"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/total_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="32"
            android:textColor="#fff"
            android:textSize="36px"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="86px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_total_acc"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="120px"
        android:background="@drawable/finished_order_acc_shape"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="收入金额"
            android:textColor="#fff"
            android:textSize="26px"
            android:gravity="center"
            android:layout_marginLeft="170px"
            android:drawableLeft="@drawable/finished_order_acc"
            android:drawablePadding="28px"
            />
        <View
            android:layout_width="1px"
            android:layout_height="66px"
            android:background="#59c4f9"
            android:layout_marginLeft="86px"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/total_fee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="￥3200"
            android:textColor="#fff"
            android:textSize="36px"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="86px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>