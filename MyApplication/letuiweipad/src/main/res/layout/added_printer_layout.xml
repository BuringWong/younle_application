    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_bt_printer"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:minHeight="@dimen/printers_height"
        android:background="@drawable/printers_shape"
        android:layout_marginLeft="55px"
        android:layout_marginRight="55px"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/bt_printer_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="云打印机"
            android:textSize="28px"
            android:textColor="#333"
            android:layout_marginLeft="35px"/>
        <TextView
            android:id="@+id/bt_printer_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设置"
            android:textColor="#999"
            android:textSize="24px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35px"
            android:drawableRight="@drawable/to_right"
            android:drawablePadding="10px"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_yunprinters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55px"
        android:layout_marginRight="55px"
        >

    </android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/add_printer"
        android:layout_width="258px"
        android:layout_height="76px"
        android:text="+添加打印机"
        android:textSize="28px"
        android:textColor="#fff"
        android:layout_marginTop="58px"
        android:layout_marginLeft="55px"
        android:background="@drawable/positive_btn_selector"/>
</com.zhy.autolayout.AutoLinearLayout>