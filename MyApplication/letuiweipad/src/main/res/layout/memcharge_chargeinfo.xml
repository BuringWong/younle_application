<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_below="@id/title"
    android:id="@+id/member_info"
    android:layout_width="match_parent"
    android:layout_height="232px"
    android:paddingTop="30px"
    android:paddingLeft="32px"
    android:paddingRight="32px"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_current_member"
        android:layout_width="280px"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会员信息："
            android:textSize="26px"
            android:textColor="#666"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="36px">
            <TextView
                android:id="@+id/name_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv1"
                android:text="会员："
                android:textColor="#999"
                android:textSize="24px"/>
            <TextView
                android:id="@+id/member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李玉成"
                android:layout_toRightOf="@id/name_left"
                android:layout_alignBottom="@id/name_left"
                android:textColor="#333"
                android:textSize="24px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15px">
            <TextView
                android:id="@+id/tel_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_left"
                android:text="手机："
                android:textColor="#999"
                android:textSize="24px"/>
            <TextView
                android:id="@+id/member_cardno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18866886868"
                android:layout_toRightOf="@id/tel_left"
                android:layout_alignBottom="@id/tel_left"
                android:textColor="#333"
                android:textSize="24px"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            >
            <TextView
                android:id="@+id/balance_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tel_left"
                android:text="余额："
                android:textColor="#999"
                android:textSize="24px"/>
            <TextView
                android:id="@+id/member_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥39.98"
                android:layout_toRightOf="@id/balance_left"
                android:layout_alignBottom="@id/balance_left"
                android:textColor="#333"
                android:textSize="24px"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/ll_current_member"
        android:layout_marginLeft="25px"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="26px"
            android:textColor="#666"
            android:text="请选择充值金额:"/>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/title"
            android:id="@+id/charge_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:layout_toRightOf="@id/member_info"
            >
        </android.support.v7.widget.RecyclerView>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>