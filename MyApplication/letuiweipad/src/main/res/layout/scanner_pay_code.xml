<?xml version="1.0" encoding="utf-8"?>
<com.yongle.letuiweipad.view.ScanRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center"
    android:id="@+id/scan_rl_layot"
    android:focusable="true"
    >
         <com.zhy.autolayout.AutoRelativeLayout
         android:layout_width="708px"
         android:layout_height="550px"
         >
         <com.zhy.autolayout.AutoRelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:gravity="center"
             android:id="@+id/al_notice"
             android:layout_above="@id/center_line"
             android:layout_centerInParent="true"
             >
             <pl.droidsonroids.gif.GifImageView
                 android:id="@+id/gif_scan"
                 android:layout_width="100px"
                 android:layout_height="100px"
                 android:background="@drawable/scan"
                 android:layout_alignLeft="@+id/center_line"
                 android:layout_alignStart="@+id/center_line"
                 android:layout_marginLeft="20px"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="28px"
                 android:paddingBottom="10px"
                 android:gravity="top"
                 android:textColor="#666"
                 android:layout_alignTop="@id/gif_scan"
                 android:layout_toRightOf="@id/gif_scan"
                 android:text="已连接扫码设备"
                 android:layout_marginLeft="25px"/>
             <TextView
                 android:paddingTop="10px"
                 android:gravity="bottom"
                 android:id="@+id/tv_payscan_notice"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignBottom="@id/gif_scan"
                 android:layout_toRightOf="@id/gif_scan"
                 android:layout_marginLeft="25px"
                 android:textSize="36px"
                 android:textColor="#333"
                 android:text="请扫描顾客的会员卡二维码"/>

             <com.zhy.autolayout.AutoRelativeLayout
                 android:id="@+id/scanner_error"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="#fff"
                 android:layout_centerInParent="true"
                 android:gravity="center"
                 >
                 <TextView
                     android:id="@+id/scanner_error_msg"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="请启动扫码设备"
                     android:textSize="32px"
                     android:drawableLeft="@drawable/pay_scanneroff_notice"
                     android:gravity="center"
                     android:drawablePadding="20px"
                     android:layout_marginBottom="42px"
                     android:textColor="#333"
                     />
             </com.zhy.autolayout.AutoRelativeLayout>
         </com.zhy.autolayout.AutoRelativeLayout>
         <ImageView
             android:id="@+id/close"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/close_icon"
             android:padding="15px"
             android:layout_alignParentRight="true"/>
     </com.zhy.autolayout.AutoRelativeLayout>
</com.yongle.letuiweipad.view.ScanRelativeLayout>
