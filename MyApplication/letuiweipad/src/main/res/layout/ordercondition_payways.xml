<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pay_way"
    android:layout_width="wrap_content"
    android:layout_height="42dp"
    android:gravity="center_vertical"
    android:layout_below="@id/time"
    >
    <TextView
        android:id="@+id/tv_payway_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="收款渠道"
        android:textSize="26px"
        android:textColor="#666"
        android:layout_marginRight="30px"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/tv_payway_name"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/rg_payway">
        <RadioButton
            android:id="@+id/tv_all"
            android:layout_toRightOf="@id/tv_payway_name"
            android:text="全部渠道"
            style="@style/conditions"/>
        <RadioButton
            android:id="@+id/tv_wx"
            android:text="微信"
            android:layout_toRightOf="@id/tv_all"
            style="@style/conditions"/>
        <RadioButton
            android:id="@+id/tv_zfb"
            android:text="支付宝"
            android:layout_toRightOf="@id/tv_wx"
            style="@style/conditions"/>
        <RadioButton
            android:id="@+id/tv_cash"
            android:text="现金"
            android:layout_toRightOf="@id/tv_zfb"
            style="@style/conditions"/>
        <RadioButton
            android:id="@+id/tv_card"
            android:text="刷卡"
            android:layout_toRightOf="@id/tv_cash"
            style="@style/conditions"/>
        <RadioButton
            android:id="@+id/tv_member"
            android:text="会员卡余额"
            android:layout_toRightOf="@id/tv_card"
            style="@style/conditions"/>
    </RadioGroup>
</com.zhy.autolayout.AutoRelativeLayout>