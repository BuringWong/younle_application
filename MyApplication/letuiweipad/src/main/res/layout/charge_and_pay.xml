<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/right_bottom_shape"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingLeft="120px"
    android:paddingRight="120px">
    <TextView
        android:id="@+id/lack_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会员卡余额不足抵扣"
        android:textSize="36px"
        android:textColor="#EA631B"
        android:layout_marginTop="56px"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="35px"
        android:id="@+id/ll_needmore"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_current_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扣除会员卡余额50元后，还需收款"
            android:textSize="28px"
            android:textColor="#666"/>
        <TextView
            android:id="@+id/tv_member_needmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23.00"
            android:textSize="28px"
            android:textColor="#ea631b"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55px"
        >
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/choose_pay_way"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_chargepay_wx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/charge_payway_shape_wx"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="微信"
                    android:drawableLeft="@drawable/charge_pay_wx"
                    android:drawablePadding="5dp"
                    android:textColor="#fff"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_chargepay_zfb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/charge_payway_shape_zfb"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="支付宝"
                    android:drawableLeft="@drawable/charge_pay_zfb"
                    android:drawablePadding="5dp"
                    android:textColor="#fff"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <RelativeLayout
                android:id="@+id/rl_chargepay_cash"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/charge_payway_shape_cash"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="现金记账"
                    android:drawableLeft="@drawable/charge_pay_cash"
                    android:drawablePadding="5dp"
                    android:textColor="#fff"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_chargepay_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/charge_payway_shape_card"
                android:gravity="center"
                android:layout_marginLeft="10dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="刷卡收款"
                    android:drawableLeft="@drawable/charge_pay_card"
                    android:drawablePadding="5dp"
                    android:textColor="#fff"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_back"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:textColor="#333"
        android:textSize="28px"
        android:text="返回上一步"
        android:gravity="center"
        android:background="@drawable/native_btn_selector"
        android:layout_marginTop="72px"/>


</com.zhy.autolayout.AutoLinearLayout>