<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/devider</item>
    </style>
    <style name="BottomTheme" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <!--<item name="android:button">@android:color/transparent</item>-->
        <item name="android:button">@null</item>
        <item name="android:textSize">18sp</item>
        <!--<item name="android:drawablePadding">-20dp</item>-->
        <!--<item name="android:paddingTop">25dp</item>-->

        <item name="android:drawablePadding">0dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textColor">@drawable/rb_textcolor_selecor</item>
        <!--<item name="android:background">@android:color/transparent</item>-->
        <item name="android:background">@drawable/main_btn_selector</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="voucherSelecter" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/voucher_selector</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="payTheme" >
        <!-- Customize your theme here. -->
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <!--<item name="android:layout_weight">1</item>-->
        <!--<item name="android:button">@android:color/transparent</item>-->
        <item name="android:button">@null</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">@dimen/managetSize</item>
        <item name="android:drawablePadding">22px</item>
        <!--<item name="android:textColor">@drawable/rb_textcolor_selecor</item>-->
        <!--<item name="android:background">@android:color/transparent</item>-->
        <item name="android:background">@drawable/pay_way_selector</item>
    </style>
    <style name="payLineTheme" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">#dfdfdf</item>
    </style>

    <style name="cal_button">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/tr_button</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="pricetag">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/input_shape</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#999</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="detail_popwindow">
        <item name="android:windowEnterAnimation">@anim/right_in</item>
        <item name="android:windowExitAnimation">@anim/right_out</item>
    </style>
    <style name="conditions">
        <item name="android:layout_marginRight">@dimen/condition_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/finished_condition_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/condtion_selector</item>
        <item name="android:textColor">@drawable/condition_text_selector</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="manager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/manager_item_selector</item>
        <item name="android:textColor">#333</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">24px</item>
        <item name="android:paddingRight">24px</item>
        <item name="android:drawablePadding">24px</item>
        <item name="android:drawableRight">@drawable/to_right</item>
        <item name="android:textSize">@dimen/managetSize</item>
    </style>
</resources>
