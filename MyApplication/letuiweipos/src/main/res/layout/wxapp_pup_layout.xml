<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="720px"
    android:background="@drawable/pup_shape">
    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sucai"/>
    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header"
        android:text="微信扫码登录品牌主账号"
        android:textSize="24px"
        android:textColor="#333"
        android:layout_marginTop="44px"/>
    <ImageView
        android:id="@+id/iv_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_notice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24px"
        android:background="@drawable/wxapp_qrcode"/>
    <TextView
        android:id="@+id/wxapp_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_qrcode"
        android:layout_marginTop="24px"
        android:layout_centerHorizontal="true"
        android:text="@string/wxapp_function_notice"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/wxapp_function"
        android:layout_marginTop="24px"
        android:background="#dbdbdb"/>
    <TextView
        android:id="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_below="@id/line"
        android:gravity="center"
        android:text="关闭弹层"
        android:textSize="24px"
        android:textColor="#3f88cd"/>
</com.zhy.autolayout.AutoRelativeLayout>