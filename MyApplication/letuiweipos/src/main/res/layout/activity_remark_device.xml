<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <include layout="@layout/titlebar_upgrade"/>

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:text="未命名设备"
        android:layout_below="@id/title_all"
        android:textSize="28px"
        android:textColor="#292929"
        android:gravity="center"/>

        <EditText
            android:id="@+id/et_newname"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="#fff"
            android:textSize="13sp"
            android:textColor="#292929"
            android:hint="为本打印机设置名称（如厨房用），选填。"
            android:paddingLeft="36px"
            android:paddingRight="18px"
            android:layout_below="@+id/tv_device_name"
            android:layout_alignParentStart="true" />
       <!-- <Button
            android:onClick="save"
            android:layout_width="500px"
            android:layout_height="80px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:text="保存"
            android:textSize="28px"
            android:textColor="#292929"
            android:layout_below="@id/et_newname"/>-->

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_button_selector"
        android:text="确认添加"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_below="@+id/et_newname"
        android:layout_centerHorizontal="true" />

</com.zhy.autolayout.AutoRelativeLayout>
