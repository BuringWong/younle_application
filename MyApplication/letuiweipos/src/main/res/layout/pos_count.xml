<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/all_pospager"
    android:clipToPadding="true">

    <include layout="@layout/titlebar_all" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.5"
            android:background="@drawable/tr_button"
            android:layout_marginTop="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="130px"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="￥"
                android:textColor="#000"
                android:textSize="28sp" />
            <TextView
                android:id="@+id/et_print"
                android:layout_width="match_parent"
                android:layout_height="130px"
                android:layout_marginRight="20px"
                android:gravity="center_vertical"
                android:paddingLeft="5px"
                android:singleLine="true"
                android:maxLength="9"
                android:textColor="#000"
                android:textSize="28sp" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="10px"
            android:background="@drawable/tr_shape_changebutton">

            <ImageView
                android:id="@+id/iv_delet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_marginRight="10px"
                android:background="@drawable/cla_del_selector"
                />
            <TextView
                android:id="@+id/et_current"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/iv_delet"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textColor="#A8A8A8"
                android:textSize="22sp" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn1"
                        style="@style/cal_button"
                        android:text="@string/one"
                        />
                    <Button
                        android:id="@+id/btn2"
                        style="@style/cal_button"
                        android:text="@string/two"
                        />
                    <Button
                        android:id="@+id/btn3"
                        style="@style/cal_button"
                        android:text="@string/three"
                        />
                    <Button
                        android:id="@+id/btn_Add"
                        style="@style/cal_button"
                        android:text="@string/add"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn4"
                        style="@style/cal_button"
                        android:text="@string/four"
                        />
                    <Button
                        android:id="@+id/btn5"
                        style="@style/cal_button"
                        android:text="@string/five"
                        />
                    <Button
                        android:id="@+id/btn6"
                        style="@style/cal_button"
                        android:text="@string/six"
                        />
                    <Button
                        style="@style/cal_button"
                        android:id="@+id/btn_multip"
                        android:text="@string/multply"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1">
                    <Button
                        style="@style/cal_button"
                        android:id="@+id/btn7"
                        android:text="@string/seven"
                        />
                    <Button
                        style="@style/cal_button"
                        android:id="@+id/btn8"
                        android:text="@string/eight"
                        />
                    <Button
                        style="@style/cal_button"
                        android:id="@+id/btn9"
                        android:text="@string/nine"
                        />
                    <Button
                        android:id="@+id/btn_subtraction"
                        style="@style/cal_button"
                        android:text="@string/sub"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1">
                    <Button
                        style="@style/cal_button"
                        android:id="@+id/btn0"
                        android:text="@string/zero"
                        />
                    <Button
                        style="@style/cal_button"
                        android:id="@+id/btn_Spot"
                        android:text="@string/point"
                        />
                    <Button
                        style="@style/cal_button"
                        android:id="@+id/bt_delete_all"
                        android:text="@string/count_clear"
                        />
                    <Button
                        style="@style/cal_button"
                        android:id="@+id/btn_Div"
                        android:text="@string/divide"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:layout_margin="5dp">
                    <Button
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/btn_start_pay"
                        android:background="@drawable/start_pay_selector"
                        android:textColor="#fff"
                        android:text="收款"
                        android:textSize="17sp"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--<include layout="@layout/pos_countdown" />-->
</com.zhy.autolayout.AutoLinearLayout>