<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/titlebar_all"
        android:id="@+id/title"/>

    <ScrollView
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_inorder_setting"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="28px"
                android:background="@drawable/order_item_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="商品/服务/房间/人员设置"
                    android:textSize="25px"
                    android:paddingLeft="28px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/to_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15px"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="28px"
                android:background="#ababab"/>-->

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginTop="28px"
                android:id="@+id/rl_order_setting"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@drawable/order_item_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="订单管理"
                    android:textSize="25px"
                    android:drawableLeft="@drawable/order_statistics"
                    android:drawablePadding="28px"
                    android:paddingLeft="28px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/to_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15px"/>

                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="28px"
                    android:background="#f2f2f2"
                    android:layout_alignParentBottom="true"/>-->

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginTop="28px"
                android:id="@+id/rl_take_out_food"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@drawable/order_item_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="外卖多平台接单"
                    android:textSize="25px"
                    android:drawableLeft="@drawable/take_out_food_pic"
                    android:drawablePadding="28px"
                    android:paddingLeft="28px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"/>

                <ImageView
                    android:id="@+id/iv_enter_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/to_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15px"/>

                <!--<TextView
                    android:layout_toLeftOf="@+id/iv_enter_in"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="多平台同时接单"
                    android:textColor="#999999"/>-->
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginTop="28px"
                android:id="@+id/rl_member"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@drawable/order_item_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="会员充值"
                    android:drawableLeft="@drawable/member_icon"
                    android:drawablePadding="28px"
                    android:paddingLeft="28px"
                    android:textSize="25px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/to_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15px"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginTop="28px"
                android:id="@+id/rl_print_setting"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@drawable/order_item_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="打印机设置"
                    android:drawablePadding="28px"
                    android:paddingLeft="28px"
                    android:textSize="25px"
                    android:drawableLeft="@drawable/printer_setting_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/to_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15px"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="28px"
                    android:background="#f2f2f2"
                    android:layout_alignParentBottom="true"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_scanbar_setting"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@drawable/order_item_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="扫码枪设置"
                    android:drawablePadding="28px"
                    android:paddingLeft="28px"
                    android:textSize="25px"
                    android:drawableLeft="@drawable/barscan_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/to_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15px"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="28px"
                    android:background="#f2f2f2"
                    android:layout_alignParentBottom="true"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_weigher"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@drawable/order_item_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="电子秤设置"
                    android:drawablePadding="28px"
                    android:paddingLeft="28px"
                    android:textSize="25px"
                    android:drawableLeft="@drawable/weigher_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/to_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15px"/>
            </com.zhy.autolayout.AutoRelativeLayout>


            <!-- android:visibility="gone" -->
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginTop="28px"
                android:id="@+id/rl_message_center"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@drawable/order_item_selector">
                <TextView
                    android:id="@+id/tv_applet_ms"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="小程序订单通知"
                    android:drawableLeft="@drawable/applet_notifcation_icon"
                    android:drawablePadding="28px"
                    android:paddingLeft="28px"
                    android:textSize="25px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"/>

                <ImageView
                    android:id="@+id/iv_applet_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/to_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15px"/>

                <TextView
                    android:id="@+id/tv_messsage_arrive"
                    android:visibility="gone"
                    android:layout_toLeftOf="@+id/iv_applet_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/applet_msg_shape"
                    android:textColor="#fff"
                    android:text="New"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="28px"
                    android:background="#f2f2f2"
                    android:layout_alignParentBottom="true" />
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginTop="28px"
                android:id="@+id/rl_about"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@drawable/order_item_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="关于本机"
                    android:drawableLeft="@drawable/about_this_machine_pic"
                    android:drawablePadding="28px"
                    android:paddingLeft="28px"
                    android:textSize="25px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/to_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15px"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="28px"
                    android:background="#f2f2f2"
                    android:layout_alignParentBottom="true"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_check_version"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:clickable="true"
                android:background="@drawable/order_item_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="检查新版本"
                    android:drawablePadding="28px"
                    android:paddingLeft="28px"
                    android:textSize="25px"
                    android:drawableLeft="@drawable/version_upgrand_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/to_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15px"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <!--<View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="28px"
                android:background="#ababab"/>-->
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginTop="28px"
                android:id="@+id/rl_exit"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginBottom="20px"
                android:background="@drawable/order_item_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="退出"
                    android:drawableLeft="@drawable/exit_app_icon"
                    android:drawablePadding="28px"
                    android:paddingLeft="28px"
                    android:textSize="25px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/to_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15px"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
    <include layout="@layout/loading_layout"/>
</com.zhy.autolayout.AutoRelativeLayout>