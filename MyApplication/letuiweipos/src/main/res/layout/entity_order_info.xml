<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:minHeight="100dp"
    android:background="#ffffff"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginLeft="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <TextView
            android:layout_marginTop="20px"
            android:id="@+id/tv_voucher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杂粮note顶配版500元代金卷"
            android:textSize="28px"
            android:textColor="#292929"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/buy_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥5.00"
                android:textSize="24px"
                android:textColor="#666"/>
            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginLeft="20px"
                android:id="@+id/actually_pay"
                android:layout_toRightOf="@id/buy_num"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="有效期至：2015年11月11日"
                android:textSize="13sp"
                android:textColor="#666"/>
        </com.zhy.autolayout.AutoRelativeLayout>


        <TextView
            android:id="@+id/tv_voucher_payer"
            android:layout_marginTop="4dp"
            android:layout_width="370px"
            android:maxEms="18"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:visibility="gone"
            android:text="购买：雷布斯"/>
        <TextView
            android:id="@+id/tv_status"
            android:layout_marginTop="8px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:textColor="#666"
            android:text="状态：未核销"
            android:paddingBottom="10dp"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <ImageView
        android:id="@+id/iv_detail_tosee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/to_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"/>
    <View
        android:id="@+id/line"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="20px"
        android:layout_height="0.1dp"
        android:background="#cdcdcd"
        />
</com.zhy.autolayout.AutoRelativeLayout>