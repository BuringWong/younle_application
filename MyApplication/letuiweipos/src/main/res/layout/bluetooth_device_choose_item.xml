<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:minHeight="50dp"
    android:background="@drawable/select_store_selector"
    android:clickable="true"
    >
    <TextView
        android:id="@+id/tv_bluetooth_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8765"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:textColor="#292929"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/tv_device_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已配对"
        android:layout_toRightOf="@id/tv_bluetooth_name"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"
        android:textColor="#292929"
       />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/to_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>
    <!--<TextView
        android:id="@+id/tv_mac_add"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_bluetooth_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蓝牙地址"
        android:textSize="15sp"
        android:textColor="#292929"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"/>-->
    <View
        android:id="@+id/bluetooth_devided_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f2f2f2"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"/>
</com.zhy.autolayout.AutoRelativeLayout>