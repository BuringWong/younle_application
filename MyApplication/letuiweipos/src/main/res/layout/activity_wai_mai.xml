<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:id="@+id/wm_actitivy"
    android:background="#fff">

    <include layout="@layout/titlebar_upgrade"
        android:id="@+id/title"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_below="@id/title"
        android:id="@+id/rl_jiedan_notices"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:background="#FFF7F5">
        <TextView
            android:id="@+id/tv_notices"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/wm_jiedan_notices"
            android:textSize="20px"
            android:paddingLeft="25px"
            android:textColor="#f76a24"
            android:drawablePadding="12px"
            android:layout_marginRight="36px"
           />
        <ImageView
            android:id="@+id/iv_close_notices"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wm_close"
            android:padding="15px"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_below="@id/rl_jiedan_notices"
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d4d4d4"/>
    <TextView
        android:visibility="gone"
        android:layout_below="@id/line1"
        android:id="@+id/pay_again_title"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text=""
        android:textSize="20px"
        android:paddingLeft="25px"
        android:textColor="#f76a24"
        android:background="#FFF7F5"
        />
    <View
        android:visibility="gone"
        android:layout_below="@id/pay_again_title"
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d4d4d4"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_below="@id/line2"
        android:id="@+id/rl_wmaccount_setting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/my_wm_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25px"
            android:text="我的外卖账号"
            android:textSize="24px"
            android:textColor="#333"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/right_icon"
            android:layout_marginRight="25px"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/to_right"/>
        <ImageView
            android:layout_toLeftOf="@id/right_icon"
            android:id="@+id/iv_bd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_bai"
            android:layout_marginRight="10px"/>
        <ImageView
            android:layout_toLeftOf="@id/iv_bd"
            android:id="@+id/iv_elm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_e"
            android:layout_marginRight="10px"/>
        <ImageView
            android:layout_toLeftOf="@id/iv_elm"
            android:id="@+id/iv_mt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_mei"
            android:layout_marginRight="10px"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/stop_start"
        android:layout_below="@id/rl_wmaccount_setting"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <View
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d4d4d4"/>
        <TextView
            android:layout_marginLeft="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动接单"
            android:layout_centerVertical="true"
            android:textColor="#333"
            android:textSize="24px"
            />
        <ToggleButton
            android:id="@+id/tb_stop_start"
            android:background="@drawable/wm_on"
            android:layout_marginRight="25px"
            android:layout_width="80px"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textOn=""
            android:textOff=""
           />
    </com.zhy.autolayout.AutoRelativeLayout>

    <RelativeLayout
        android:layout_below="@id/stop_start"
        android:id="@+id/today_wm_num"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:background="#F2F2F2"
        android:paddingLeft="25px"
        android:paddingRight="25px">
        <TextView
            android:id="@+id/tv_today_wm_total"
            android:textColor="#999"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="今日订单：23笔"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textColor="#999"
            android:text="按最新接单排序"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <ListView
        android:layout_below="@id/today_wm_num"
        android:id="@+id/lv_wm_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp"/>

</com.zhy.autolayout.AutoRelativeLayout>
