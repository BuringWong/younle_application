<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:textSize="24px"
        android:textColor="#666"
        android:text="使用时段"
        android:background="#f2f2f2"
        android:gravity="center"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80px"
        android:background="#fff">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/count_by_hour"
                android:clickable="true"
                android:enabled="false"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textColor="@drawable/hour_day_selector"
                android:background="#fff"
                android:text="按小时计费"/>
            <View
                android:id="@+id/hour_line"
                android:layout_width="120px"
                android:layout_height="1px"
                android:background="#3F88CE"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="40px"
            android:background="#ababab"
            android:layout_marginTop="20px"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/count_by_day"
                android:enabled="true"
                android:background="#fff"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@drawable/hour_day_selector"
                android:layout_height="match_parent"
                android:text="按天计费"/>
            <View
                android:visibility="gone"
                android:id="@+id/day_line"
                android:layout_width="120px"
                android:layout_height="1px"
                android:background="#3F88CE"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:id="@+id/tv_dx_time"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:text="0小时0分钟"
        android:gravity="center"
        android:background="#fbfbfb"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_start"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="vertical"
        android:background="@drawable/starttime_endtime_selector">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:textSize="24px"
            android:textColor="#999"
            android:text="开始时间"
            android:gravity="center_vertical"
            android:paddingLeft="38px"
            />
        <!--<View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#d8d8d8"
            android:layout_marginLeft="38px"/>-->
        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:textSize="28px"
            android:textColor="#3f88cd"
            android:text="2016年07月15日18时22分"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/to_right"
            android:paddingLeft="38px"
            android:paddingRight="20px"
           />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#d8d8d8"
        android:layout_marginLeft="38px"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_end"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="vertical"
        android:background="@drawable/starttime_endtime_selector">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:textSize="24px"
            android:textColor="#999"
            android:text="结束时间"
            android:gravity="center_vertical"
            android:paddingLeft="38px"
            />
        <!--<View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#d8d8d8"
            android:layout_marginLeft="38px"/>-->
        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:textSize="28px"
            android:textColor="#3f88cd"
            android:text="未选择"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/to_right"
            android:paddingLeft="38px"
            android:paddingRight="20px"
            />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="26px"
        android:background="#f2f2f2"
        />
    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@drawable/btn_room_choose"
        android:text="确认"
        android:textColor="#fff"
        android:textSize="28px"/>
</com.zhy.autolayout.AutoLinearLayout >