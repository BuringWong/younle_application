<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
  >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:focusable="true"
        android:id="@+id/ll_user_input"
        android:focusableInTouchMode="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="142px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="乐推微门店派"
            android:textColor="#000"
            android:paddingTop="10px"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/et_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:layout_marginTop="150px"
            android:hint="请输入门店派账号"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/et_login_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:layout_marginTop="15px"
            android:hint="请输入密码"
            android:textSize="15sp"
            />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:layout_marginTop="25px"
            android:background="@drawable/login_button_selector"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="15sp"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_above="@+id/al_regist"
        android:id="@+id/tv_login_findpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginBottom="30px"
        android:textColor="#3366ff"
        android:text="忘记密码无法登陆？"
        android:textSize="30px"
        android:visibility="gone"
        android:gravity="center"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/al_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_login_regist"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:textSize="22px"
            android:gravity="center"
            android:lineSpacingExtra="5px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="立即注册乐推微并添加门店获取门 "
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="乐推微官网：tui.younle.com"
            android:gravity="center"
            android:textSize="22px"/>
        <TextView
            android:layout_marginTop="5px"
            android:layout_marginBottom="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="联系电话：4009-600-567"
            android:gravity="center"
            android:textSize="22px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.younle.younle624.myapplication.view.SelfImageView
        android:id="@+id/self_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff"/>
   <include layout="@layout/loading_layout"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:padding="20dp"
        android:id="@+id/ll_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="#bb000000">
        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="100px"
            android:layout_height="100px"
            />
        <TextView
            android:id="@+id/tv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本检查中..."
            android:textColor="#ffffff"
            android:textSize="25px"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>

