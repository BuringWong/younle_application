<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- android:background="@drawable/bind_waiter_shape" -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/ll_shape_timmer_cut"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/tv_weixin_pay"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/weixin_pay" />
            <TextView
                android:id="@+id/tv_micro_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:text="微信收款" />
        </RelativeLayout>

        <View
            android:layout_width="170dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_horizontal"
            android:background="#f1f1f1" />

        <RelativeLayout
            android:id="@+id/tv_zfb_pay"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/zfb_pay" />

            <TextView
                android:id="@+id/tv_ali_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:text="支付宝收款" />
        </RelativeLayout>

        <View
            android:layout_width="170dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_horizontal"
            android:background="#f1f1f1" />

        <RelativeLayout
            android:id="@+id/tv_cash_pay"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/cash_pay" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:text="现金收款(记账)" />
        </RelativeLayout>

        <View
            android:layout_width="170dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_horizontal"
            android:background="#f1f1f1" />

        <RelativeLayout
            android:id="@+id/tv_card_pay"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/card_pay" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:text="刷卡收款(记账)" />
        </RelativeLayout>

        <View
            android:visibility="gone"
            android:layout_width="170dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_horizontal"
            android:background="#f1f1f1" />

        <RelativeLayout
            android:id="@+id/member_pay_money"
            android:visibility="gone"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/member_pay" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:text="会员卡余额支付" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>