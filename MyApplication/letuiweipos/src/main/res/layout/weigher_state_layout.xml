<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_weigher"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:minHeight="35dp"
    android:background="#fff4e4"
    android:gravity="center">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/ll_weigh_state">
        <ImageView
            android:id="@+id/iv_weigher_state_icon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/scanner_connecting"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:id="@+id/tv_weigher_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:text="正在连接蓝牙电子秤"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:id="@+id/tv_current_weigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:text=""
            android:visibility="gone"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>