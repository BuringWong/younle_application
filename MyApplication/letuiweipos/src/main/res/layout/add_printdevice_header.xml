<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_local_printer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <TextView
            android:id="@+id/tv_print_local"
            android:paddingLeft="36px"
            android:paddingRight="18px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:text="本地打印机(本地设备)"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:text="小票设置"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/to_right"
            android:drawablePadding="10px"
            android:textColor="#999"
            android:paddingRight="18px"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:visibility="gone"
        android:id="@+id/device_line"
        android:layout_marginLeft="36px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f2f2f2"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_bt_printer"
        android:background="#fff">
        <TextView
            android:layout_below="@id/tv_added"
            android:id="@+id/tv_print_bluetooth"
            android:paddingLeft="36px"
            android:paddingRight="18px"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/to_right"
            android:layout_height="80px"
            android:text="后厨专用打印(蓝牙设备)"
            android:background="@drawable/store_chose_selector"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:text="小票设置"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/to_right"
            android:drawablePadding="10px"
            android:textColor="#999"
            android:paddingRight="18px"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ababab"
        />-->
</com.zhy.autolayout.AutoLinearLayout>