<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="#fff"
    android:clickable="true"
    android:minHeight="75dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="8"
            android:text="test商品"
            android:textColor="#292929"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/totalnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="8"
            android:text="可退款数量1"
            android:textColor="#999"
            android:textSize="15sp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:gravity="center">
        <TextView
            android:id="@+id/refundacc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f50"
            android:text="退款：￥4.5"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_minus"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:src="@drawable/raduce_party_icon"/>

            <TextView
                android:id="@+id/refund_num"
                android:layout_toRightOf="@+id/btn_minus"
                android:background="@drawable/add_raduce_goods"
                android:layout_width="wrap_content"
                android:layout_height="21.5dp"
                android:minWidth="40dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:inputType="number"
                android:singleLine="true"
                android:text="0"/>

            <ImageView
                android:id="@+id/btn_add"
                android:layout_toRightOf="@+id/refund_num"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:src="@drawable/add_party_icon"/>
        </RelativeLayout>
    </LinearLayout>


    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="#bfbfbf" />-->
</RelativeLayout>