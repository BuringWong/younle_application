<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:lineSpacingMultiplier="1.2"
        android:textSize="28px"
        android:textColor="#333"
        android:layout_marginBottom="34px"
        android:text="需开通“下单收银”或“智慧门店”才可使用下单功能！"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d4d4d4"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:paddingLeft="30px"
        android:paddingRight="30px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="28px"
            android:textColor="#333"
            android:text="高效点单"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_xd_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="￥360/年"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="28px"/>
        <TextView
            android:id="@+id/tv_open_xd"
            android:layout_width="100px"
            android:layout_height="46px"
            android:layout_alignParentRight="true"
            android:textSize="24px"
            android:textColor="#fff"
            android:background="#fb9927"
            android:text="开通"
            android:gravity="center"
            android:layout_centerVertical="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d4d4d4"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:paddingLeft="30px"
        android:paddingRight="30px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="28px"
            android:textColor="#333"
            android:text="智慧门店"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_wisdom_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="￥1440/年"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="28px"/>
        <TextView
            android:id="@+id/tv_open_wisdom"
            android:layout_width="100px"
            android:layout_height="46px"
            android:layout_alignParentRight="true"
            android:textSize="24px"
            android:textColor="#fff"
            android:background="#fb9927"
            android:text="开通"
            android:gravity="center"
            android:layout_centerVertical="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:background="#d4d4d4"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="76px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="功能介绍"
            android:textColor="#333"
            android:textSize="28px"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="高效点单"
            android:textColor="#333"
            android:textSize="28px"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="智慧门店"
            android:textColor="#333"
            android:textSize="28px"
            android:layout_weight="1"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>