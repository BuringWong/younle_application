<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:minHeight="30dp">
    <TextView
        android:id="@+id/tv_cancel_search"
        android:layout_alignParentRight="true"
        android:layout_width="45dp"
        android:gravity="center"
        android:paddingRight="15dp"
        android:layout_height="match_parent"
        android:textColor="#3f88cd"
        android:textSize="14sp"
        android:text="取消"
        android:visibility="gone"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_toLeftOf="@id/tv_cancel_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:background="@drawable/order_search_background2">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:hint="输入序号或房间名查询"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:maxLength="10"
            android:textSize="13sp"
            android:textColorHint="#b6b6b6"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></EditText>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/search_icon" />
    </com.zhy.autolayout.AutoRelativeLayout>
</RelativeLayout>