        <!--android:drawableTop="@drawable/btn_selector_mycenter"-->
        <!--android:text="我的"-->
        <!--android:textColor="@drawable/rb_textcolor_selecor"/>-->
    </RadioGroup>
</com.zhy.autolayout.AutoLinearLayout>
