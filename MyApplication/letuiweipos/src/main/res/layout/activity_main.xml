<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Android="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f1f1f1"></com.zhy.autolayout.AutoFrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#D4D4D4" />

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="4px">

        <RadioButton
            android:id="@+id/btn_main_pos"
            style="@style/BottomTheme"
            android:drawableTop="@drawable/rb_poscolor_selecor"
            android:text="收银" />

        <RadioButton
            android:id="@+id/btn_main_order"
            style="@style/BottomTheme"
            android:drawableTop="@drawable/rb_vouchercolor_selecor"
            android:text="下单" />

        <RadioButton
            android:id="@+id/btn_main_voucher"
            style="@style/BottomTheme"
            android:drawableTop="@drawable/rb_ordercolor_selecor"
            android:text="核销" />

        <RadioButton
            android:id="@+id/btn_main_manager"
            style="@style/BottomTheme"
            android:drawableTop="@drawable/rb_aboutcolor_selector"
            android:text="管理" />
        <!--<RadioButton-->
        <!--style="@style/BottomTheme"-->
        <!--android:id="@+id/btn_main_finder"-->
        <!--android:drawableTop="@drawable/btn_selector_finder"-->
        <!--android:text="发现"-->
        <!--android:textColor="@drawable/rb_textcolor_selecor"/>-->
        <!--<RadioButton-->
        <!--style="@style/BottomTheme"-->
