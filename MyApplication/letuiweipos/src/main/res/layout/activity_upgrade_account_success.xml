<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/titlebar_upgrade"/>

    <ImageView
        android:id="@+id/iv_success_update"
        android:layout_below="@+id/title_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/su"/>

    <TextView
        android:id="@+id/tv_account_account"
        android:layout_below="@+id/iv_success_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="开通成功！"/>

    <TextView
        android:id="@+id/tv_account_info"
        android:layout_below="@+id/tv_account_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="20dp"
        android:text="账号10118已开通“会员营销”功能"/>

    <TextView
        android:id="@+id/tv_time_duration"
        android:layout_below="@+id/tv_account_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="8dp"
        android:text="使用期限至：2017年12月31日"/>

    <Button
        android:id="@+id/btn_use_now"
        android:layout_below="@+id/tv_time_duration"
        android:layout_width="match_parent"
        android:background="@drawable/login_button_selector"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="立即查看"
        android:textColor="#fff"/>

</RelativeLayout>
