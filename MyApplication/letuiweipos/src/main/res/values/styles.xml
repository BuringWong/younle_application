<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BottomTheme" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">7sp</item>
        <item name="android:drawablePadding">10px</item>
        <item name="android:textColor">@drawable/rb_textcolor_selecor</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="KindTheme" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textColor">@drawable/kinds_text_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="BaseLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ababab</item>
    </style>
    <style name="pop_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>
    <style name="cal_button">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/tr_button</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="cal_button1">
        <item name="android:layout_margin">2.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/tr_button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 新加popwindow进入动画 -->
    <style name="popupAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="text_flag_01">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/flag_01</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- 多规格商品字样式 <item name="android:background">@drawable/multi_specification_shape</item>-->
    <style name="text_style_multi_cpecification">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/multi_choose_selector</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="text_style_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <declare-styleable name="CustomEditText">
        <attr name="inputType" format="enum">
            <enum name="none" value="0" />
            <enum name="phone" value="1" />
            <enum name="bankCard" value="2" />
        </attr>

    </declare-styleable>

</resources>
